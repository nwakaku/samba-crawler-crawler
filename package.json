{
  "name": "@mweb/monorepo",
  "version": "0.1.0",
  "description": "Mutable Web monorepository",
  "main": "index.js",
  "repository": "https://github.com/dapplets/mutable-web-monorepo",
  "author": "Dapplets Team <contact@dapplets.org>",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build --filter=!@mweb/crawler-economy",
    "build:extension": "turbo run build --filter=@mweb/extension",
    "build:gateway": "turbo run build --filter=@mweb/gateway",
    "build:contract": "turbo run build --filter=@mweb/crawler-economy",
    "dev": "turbo run dev --concurrency 11",
    "clean": "turbo run clean",
    "autoclave": "rimraf libs/**/dist && rimraf libs/**/lib && rimraf libs/**/node_modules && rimraf libs/**/coverage && rimraf libs/**/.turbo && rimraf apps/**/dist && rimraf apps/**/lib && rimraf apps/**/node_modules && rimraf apps/**/coverage && rimraf apps/**/build && rimraf apps/**/.turbo && rm -rf node_modules",
    "test": "turbo run test",
    "release": "turbo run release --filter=@mweb/extension",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.16.15",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "babel-jest": "^29.7.0",
    "eslint": "8.20.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.5",
    "rimraf": "3.0.2",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.2.5",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  }
}
